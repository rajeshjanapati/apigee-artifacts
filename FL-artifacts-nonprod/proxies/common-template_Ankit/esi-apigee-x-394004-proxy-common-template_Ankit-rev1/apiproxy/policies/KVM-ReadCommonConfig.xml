<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<KeyValueMapOperations continueOnError="false" enabled="true" name="KVM-ReadCommonConfig" mapIdentifier="common-template-config">
    <DisplayName>KVM-ReadCommonConfig</DisplayName>
    <!-- This is the policy to read common configuration value from KVM -->
    <ExpiryTimeInSecs>300</ExpiryTimeInSecs>
    <Get assignTo="kvm.common.config.quota">
        <Key>
            <Parameter>quota</Parameter>
        </Key>
    </Get>
    <Get assignTo="kvm.common.config.rate">
        <Key>
            <Parameter>rate</Parameter>
        </Key>
    </Get>
    <Scope>environment</Scope>
</KeyValueMapOperations>