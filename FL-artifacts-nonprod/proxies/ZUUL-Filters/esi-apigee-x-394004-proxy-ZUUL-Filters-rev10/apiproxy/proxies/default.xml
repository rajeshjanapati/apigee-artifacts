<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>FC-JWT</Name>
            </Step>
            <Step>
                <Name>JS-ClientIdentityFilter</Name>
            </Step>
            <Step>
                <Name>RF-ClientIdentityFilter</Name>
                <Condition>error1 == "session awarepath has no client identity"</Condition>
            </Step>
        </Request>
        <Response>
            <Step>
                <Name>JS-ResponseLogFilter</Name>
            </Step>
            <Step>
                <Name>JS-ResponseCachePreFilter</Name>
            </Step>
            <Step>
                <Name>JS-jsonpayload</Name>
            </Step>
            <Step>
                <Name>AM-SessionPostFilter</Name>
            </Step>
        </Response>
    </PreFlow>
    <Flows/>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/zuul-filters</BasePath>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>